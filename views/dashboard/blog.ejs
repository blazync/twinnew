<%- include('../includes/dashhead') %>
  <div class="p-4 sm:ml-64">
     <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14  bg-white">
        <div class="relative overflow-x-auto">
            <div class="pb-2 text-right">
                <a href="/dashboard/addblog">
                    <button type="submit" class=" inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-gray-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                        Add Blog
                    </button>
                </a>
            </div>
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Image</th>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Title</th>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Author</th>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Created At</th>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Updated At</th>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">Tags</th>
                        <th scope="col" class="px-6 py-3 rounded-e-lg">Comments</th>
                        <th scope="col" class="px-6 py-3 rounded-e-lg">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop through each data -->
                    <% if (blog.length > 0) { %>
                        <% blog.forEach(blog => { %>
                                <tr class="bg-white dark:bg-gray-800">
                                    <td class="px-6 py-4">
                                        <img src="../../uploads/<%= blog.imageUrl %>" alt="Blog Image" class="h-16 w-16 object-cover rounded-lg">
                                    </td>
                                    <td class="px-6 py-4"><%= blog.title %></td>
                                    <td class="px-6 py-4"><%= blog.author %></td>
                                    <td class="px-6 py-4"><%= blog.createdAt %></td>
                                    <td class="px-6 py-4"><%= blog.updatedAt %></td>
                                    <td class="px-6 py-4">
                                        <% blog.tags.forEach(tag => { %>
                                            <span class="inline-block bg-gray-200 text-gray-800 rounded-full px-3 py-1 text-sm font-semibold mr-2 mb-2"><%= tag %></span>
                                        <% }) %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <% blog.comments.forEach(comment => { %>
                                            <%= comment %> <!-- Assuming you want to display the comment IDs -->
                                        <% }) %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <a href="/dashboard/editblog?id=<%= blog._id %>" class="btn btn-gray-700 font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                                        <a href="/dashboard/deleteblog?id=<%= blog._id %>" onclick="return confirm('Are you sure you want to delete this blog?');" class="btn btn-gray-700 font-medium text-blue-600 dark:text-blue-500 hover:underline">Delete</a>

                                    </td>
                                </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="9" class="px-6 py-4 text-center text-gray-900 dark:text-white">
                                No data found
                            </td>
                        </tr>
                    <% } %>
                    
                </tbody>
            </table>
        </div>
        
        
     </div>
  </div>
  <%- include('../includes/dashfooter') %>
