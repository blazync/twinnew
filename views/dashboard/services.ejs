<%- include('../includes/dashhead') %>
  <div class="p-4 sm:ml-64">
     <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14  bg-white">
        <div class="relative overflow-x-auto">
            <div class="pb-2 text-right">
                <a href="/dashboard/addservices">
                    <button type="submit" class=" inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-gray-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
                        Add Services
                    </button>
                </a>
            </div>
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3 rounded-e-lg">
                            Created At
                        </th>
                        <th scope="col" class="px-6 py-3 rounded-e-lg">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop through each Enquiry -->
                    <% if (services.length > 0) { %>
                        <% services.forEach(enquiry => { %>
                                <tr class="bg-white dark:bg-gray-800">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <%= enquiry.name %> <!-- Display Enquiry name -->
                                    </th>
                                    <td class="px-6 py-4">
                                        <%= enquiry.timestamps %> <!-- Display Enquiry contact time -->
                                    </td>
                                    <td class="px-6 py-4">
                                        <a href="/dashboard/editservices?id=<%= enquiry._id %>" class="btn btn-gray-700 font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                                        <a href="/dashboard/deleteservices?id=<%= enquiry._id %>" onclick="return confirm('Are you sure you want to delete this service?');" class="btn btn-gray-700 font-medium text-blue-600 dark:text-blue-500 hover:underline">Delete</a>

                                    </td>
                                </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-gray-900 dark:text-white">
                                No data found
                            </td>
                        </tr>
                    <% } %>
                    
                </tbody>
            </table>
        </div>
        
        
     </div>
  </div>
  <%- include('../includes/dashfooter') %>
